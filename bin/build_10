#!/bin/bash
# build: build script for creating video from PHP Git sources and SVN repository

gource \
    --background 000000 \
    --hide dirnames,filenames,mouse \
    --date-format "%d %B %Y" \
    --font-size 26 \
    --seconds-per-day 0.01 \
    -1920x1080 \
    -e 0.02 \
    --bloom-multiplier 1.0 \
    --bloom-intensity 0.5 \
    --highlight-all-users \
    --auto-skip-seconds 0.5 \
    --key \
    --start-date '2015-12-03' \
    --stop-date '2016-12-04' \
    -o ./video/php_10.ppm \
    ./php-src

ffmpeg \
    -y \
    -r 60 \
    -f image2pipe \
    -vcodec ppm \
    -i ./video/php_10.ppm \
    -vcodec libx264 \
    -preset ultrafast \
    -pix_fmt yuv420p \
    -crf 1 \
    -threads 0 \
    -bf 0 \
    ./video/php_10.mp4
